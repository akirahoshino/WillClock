<% provide(:title, "Sign up") %>
<h2 class="text-center">Sign up</h2>

<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
<div class="container py-3 bg">
  <div class="row justify-content-md-center" role="form">
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="form-group row">
        <div class="col-sm-4">
          <%= f.label :email %>
        </div>
        <div class="col-sm-8">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>
    
      <div class="form-group row">
        <div class="col-sm-4">
        <%= f.label :password %>
        </div>
        <div class="col-sm-8">
          <%= f.password_field :password, autocomplete: "new-password" %><br />
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>
      </div>
    
      <div class="form-group row">
        <div class="col-sm-4">
          <%= f.label :password_confirmation %><br />
        </div>
        <div class="col-sm-8">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>
    
  </div>
</div>
<div class="row justify-content-md-center">
  <div class="px-5">
    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-outline-primary" %>
    </div>
  </div>
  <div class="px5">
    <%= link_to "æˆ»ã‚‹", root_path, class: "btn btn-outline-secondary" %>
  </div>  
</div>
<% end %>
<% provide(:title, "Sign up") %>

<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="card signup">
      <h1 class="card-title mb-4 mt-1 form-title">Sign up</h1>
      <%= render "devise/shared/error_messages", resource: resource %>
      <form>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email", type: "email" %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "********", type: "password" %><br />
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "********", type: "password" %>
          <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
        </div>
        <%= link_to "æˆ»ã‚‹", root_path, class: "text-center" %>
      </form>
    </div>
  </div>
</div>
<% end %>
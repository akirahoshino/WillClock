<h1>目標一覧</h1>
<body>

<!--  table  -->
   <div>
    <table class="table table-striped table-hover">
        <tr>  
          <th>user_id<th>
          <th>goal_id<th>
          <th>目標<th>
          <th>期限<th>
          <th>編集<th>
          <th>削除<th>
        </tr>  
      <% @goal.each do |goal| %>
        <tr>
          <td><%= goal.user_id %></td>
          <td><%= goal.id %></td>
          <td><%= goal.title %></td>
          <td><%= goal.due_time %></td>
          <td><%= link_to "edit", edit_goal_path(goal) %></td>
          <td><%= link_to "delete", goal_path(goal), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>  
      <% end %>
    </table>
  </div>
    

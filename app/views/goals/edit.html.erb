<% provide(:title, "編集") %>
<% if @goal.errors.any? %>
  <ul>
    <% @goal.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

  <section>
    <h3 class="text-center">目標の変更</h3>
  </section>
  
<div class="container py-4" style="background-color:#FAEBD7">
  <%= form_with model: @goal, class: "form-horizontal px-5" do |form| %>
    <div class="form-group row">
      <div class="col-lg-3 col-form-label form-control-label text-center" >
        目標の名前
      </div>
      <div class="col-lg-9">
        <%= form.text_field :title, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-lg-3 col-form-label form-control-label text-center" >
        内容
      </div>
      <div class="col-lg-9">
        <%= form.text_field :info, class: 'form-control' %>
      </div>
    </div>
  
    <div class="form-group row">
      <div class="col-lg-3 col-form-label form-control-label text-center" >
        期限
      </div>
      <div class="col-lg-9">
        <%= form.datetime_field :due_time, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group text-center">
      <%= form.submit '更新', class: 'btn btn-success' %>
      <%= link_to '戻る', goals_path, class: 'btn btn-warning' %>
    </div>

  <% end %>
</div>
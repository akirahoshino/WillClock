<% if @goal.errors.any? %>
  <ul>
    <% @goal.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

  
<form class="form-horizontal px-5" role="form">
<%= form_with model: @goal do |form| %>
  <div class="form-group row">
    <div class="col-lg-3 col-form-label form-control-label text-right" >
      目標の名前
    </div>
    <div class="col-lg-9">
      <%= form.text_field :title, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-lg-3 col-form-label form-control-label text-right" >
      内容
    </div>
    <div class="col-lg-9">
      <%= form.text_field :info %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-lg-3 col-form-label form-control-label text-right" >
      期限
    </div>
    <div class="col-lg-9">
      <%= form.datetime_field :due_time %>
    </div>
  </div>
  
  <div class="form-group row">
    <div class="col-lg-3 col-form-label form-control-label text-right" >
      重要度
    </div>
    <div class="col-lg-9">
      <%= form.text_field :priority %>
    </div>
  </div>
  
  <div class="form-group text-center">
    <%= form.submit '更新', class: 'btn btn-success' %>
    <%= link_to '戻る', goals_path, class: 'btn btn-secondaly' %>
  </div>

<% end %>
</form>
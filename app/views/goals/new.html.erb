<% provide(:title, "新規目標") %>

<% if @goal.errors.any? %>
  <ul>
    <% @goal.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div class="container" style="background-color:#FAEBD7;">
  <%= form_with model: @goal, class: "form-horizontal px-5 py-4" do |form| %>
     <div class="form-group row">
      <div class="col-3 col-form-label form-control-label" >
        目標の名前
      </div>
      <div class="col-lg-9">
        <%= form.text_field :title, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-lg-3 col-form-label form-control-label" >
        内容
      </div>
      <div class="col-lg-9">
        <%= form.text_field :info, class: 'form-control'  %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-lg-3 col-form-label form-control-label" >
        期限
      </div>
      <div class="col-lg-9">
        <%= form.datetime_field :due_time, class: 'form-control'  %>
      </div>
    </div>
    <div class="action text-center">
      <%= form.submit '新規作成', class: "btn btn-success my-2 text-light" %>
      <%= link_to '戻る', goals_path,  class: "btn btn-secondary text-light" %>
    </div> 
  <% end %>
</div>

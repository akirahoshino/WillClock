<!DOCTYPE html>
<html lang="ja">

  <head>
    <h1>目標を追加</h1>
  </head>

  <body>
    <div>
<%= form_with model: @goal do |form| %>
  <%= form.label :title %><%= form.text_field :title %>
  <%= form.datetime_field :due_time %>
  <%= form.submit '追加' %>
<% end %>
    </div>
    <div>
<% if @goal.errors.any? %>
  <ul>
    <% @goal.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    <!--<li><%= puts @goal.errors.full_messages %></li>-->
  </ul>
<% end %>
    </div>
  </body>
</html>
<% if @goal.errors.any? %>
  <ul>
    <% @goal.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div>
  <h3 class="text-center">新規作成</h3>
</div>

<form class="form-horizontal px-5 py-4 bg-secondary text-light" role="form">
  <%= form_with model: @goal do |form| %>
    <div class="form-group row">
      <div class="col-lg-5 col-form-label form-control-label text-right" >
        目標の名前
      </div>
      <div class="col-lg-7">
        <%= form.text_field :title, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-lg-5 col-form-label form-control-label text-right" >
        内容
      </div>
      <div class="col-lg-7">
        <%= form.text_field :info, class: 'form-control'  %>
      </div>
    </div>
  
    <div class="form-group row">
      <div class="col-lg-5 col-form-label form-control-label text-right" >
        期限
      </div>
      <div class="col-lg-7">
        <%= form.datetime_field :due_time, class: 'form-control'  %>
      </div>
    </div>


  <div class="action text-center">
    <%= form.submit '新規作成', class: "btn btn-outline-success my-2 text-light" %>
    <%= link_to '戻る', goals_path,  class: "btn btn-outline-secondary text-light" %>
  </div>  
  <% end %>
</form>  
    

  
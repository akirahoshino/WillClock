<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>

<div>
  <table class="table">
    <tr>  
      <!--<th>goal_id</th>-->
      <th>日付</th>
      <th>コメント</th>
    </tr>  
  <% @task.each do |task| %>
    <tr>
      <td><%= task.created_at %></td>
      <td><%= task.info %></td>
      <td><%= link_to "edit", edit_task_path(task) %></td>
      <td><%= link_to "delete", task_path(task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>
</div>